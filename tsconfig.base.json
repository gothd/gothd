{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ruasvivas/ui": [
        "packages/ui"
      ],
      "@ruasvivas/ui/*": [
        "packages/ui/*"
      ],
      "@ruasvivas/assets": [
        "packages/assets"
      ],
      "@ruasvivas/assets/*": [
        "packages/assets/*"
      ]
    }
  }
}