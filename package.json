{
  "name": "gothd",
  "version": "0.1.1",
  "description": "⋆｡ﾟ☁︎｡⋆｡ ﾟ｡⋆ (°□°) ☝️ ⋆｡ﾟ☁︎｡⋆｡ ﾟ☾ ﾟ｡⋆",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "validate:frontmatter": "ts-node -P apps/shell/tsconfig.node.json --esm apps/shell/scripts/validate-frontmatter.mts",
    "dev:shell": "npm run dev --workspace=shell",
    "build:shell": "npm run validate:frontmatter && npm run build --workspace=shell"
  },
  "lint-staged": {
    "apps/shell/conteudo/**/*.mdx": [
      "ts-node --esm apps/shell/scripts/validate-frontmatter.mts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothd/gothd.git"
  },
  "keywords": [
    "monorepo",
    "platform",
    "open-source",
    "portfolio",
    "diario",
    "plataforma"
  ],
  "author": "gothd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gothd/gothd/issues"
  },
  "homepage": "https://github.com/gothd/gothd#readme",
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^15.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  }
}